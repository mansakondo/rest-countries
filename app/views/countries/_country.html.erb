<div class="mb-10 surface hover:bg-gray-veryLightGray dark:hover:bg-blue-veryDarkBlue">
  <a href="<%= country_path(country.name) %>" target="_top">
    <img src="<%= country.flag %>" alt="<%= country.name %>"class="shadow">
    <div class="p-8">
      <h1 class="mb-3 text-xl font-extrabold"><%= country.name %></h1>
      <p><span class="font-semibold">Population: </span><%= country.population %></p>
      <p><span class="font-semibold">Region: </span><%= country.region %></p>
      <p><span class="font-semibold">Capital: </span><%= country.capital %></p>
    </div>
  </a>
</div>
